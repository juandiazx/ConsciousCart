{
    "manifest_version": 3,
    "name": "ConsciousCart",
    "version": "1.0",
    "description": "Shop online ",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
          "matches": ["*://*.amazon.com/*", "*://*.walmart.com/*"],
          "js": ["content.js"]
        }
      ],
    "permissions": [
        "activeTab",
        "storage",
        "https://*/*"
      ],
    "action": {
      "default_popup": "index.html",
      "default_title": "ConsciousCart",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background/background.js"
    }
  }